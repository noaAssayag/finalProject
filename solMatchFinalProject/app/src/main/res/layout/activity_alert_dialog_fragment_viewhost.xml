<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/nav_header"
    android:orientation="vertical"
    tools:context=".Hosts.allHosts">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/bg_gradient"
        android:elevation="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:padding="5dp"
            card_view:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center"
            android:text="@string/Accommodationlocationdetails"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/hostingDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/secTitleFragment"
        android:textColor="@color/log_in_color"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTexthostingAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/ic_baseline_location"
        android:ems="10" />

    <EditText
        android:id="@+id/editTexthostingDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/baseline_calendar_today_24" />

    <TextView
        android:id="@+id/locationImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/locationImg"
        android:backgroundTint="@color/colorBtSignIn"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageOfLocation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:text="@string/Accommodationlocationdetails"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/checkboxaccomodation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:text="@string/accommodationOption" />

    <CheckBox
        android:id="@+id/checkboxPets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/petsOption"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"/>

    <CheckBox
        android:id="@+id/checkboxprivateRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privateRoomOption"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"/>

    <CheckBox
        android:id="@+id/checkboxsecureOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secureOption"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"/>


        <Button
            android:id="@+id/saveBtn"
            android:text="@string/btnsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/colorBtSignIn"
            android:layout_gravity="center"
            />





</LinearLayout>

