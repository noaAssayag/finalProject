<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".personalQuestionsActivity"
    android:background="@drawable/bg_gradient"
    >

    <TextView
        android:id="@+id/intrestsPrompt"
        android:text="@string/intrests"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/promptInterests"
        android:text="@string/intretsDesc"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hobbiesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:radius="8dp"
        android:layout_marginRight="16dp"
        android:background="@color/bg_btn_blue"/>
    <TextView
        android:id="@+id/personalInfoPrompt"
        android:text="@string/tellUs"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/inputPersonalInfo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="text" />



    <Button
        android:id="@+id/nextPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorBtSignIn"
        android:text="@string/next"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="18dp"/>

</LinearLayout>
