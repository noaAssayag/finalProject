<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center|top">

    <TextView
        android:id="@+id/personal_de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        android:text="@string/personal_de"
        android:textAppearance="@style/personal_de"
        android:gravity="center_horizontal"
        android:fontFamily="@font/sans"
        android:textColor="#292929"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="104.25dp"
            android:layout_height="104.25dp"
            android:src="@drawable/anonymousman"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/icon"
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_mode_edit_24"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/noam_cohen_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentTop="true"
        android:text="@string/noam_cohen_"
        android:textAppearance="@style/personal_de"

        />
    <TextView
        android:id="@+id/maharashtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:text="@string/location"
        android:textAppearance="@style/personal_de"
        android:gravity="top"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/email"
        android:textAppearance="@style/personal_de"
        android:gravity="left"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_rectangle"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/profilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/phone"
        android:textAppearance="@style/personal_de"
        android:gravity="left"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/phoneNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_rectangle"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/donationPromptProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/AllDonations"
        android:textAppearance="@style/personal_de"
        android:gravity="left"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/donationsPromptRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/hostingsPromptProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/hosts"
        android:textAppearance="@style/personal_de"
        android:gravity="left"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hostingPromptRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>